// ===============================================================================
// Triangles

// Usage:
//     .box:after {
//         _triangle(
//               $dir,         // <-- top, bottom, left, right.
//               $color,       // arrow color
//               $height,      // i.e. "Length" of the arrow.
//               $width,       // total width of the arrow. (Defaults to twice the @height)
//               $wOffset,     // placement along the edge of the container. (Defaults to 50%.)
//               $offsetEdge,  // Edge from which the offset is calculated. (Defaults to left or top respectively.)
//             );
//     }
_triangle($dir=top, $color=#fff, $h=10px, $w=null, $wOffs=50%, $wEdge=left, $shift='') {
    _triangleBasic();
    _triangleShape($dir, $color, $h, $w, $wOffs, $wEdge, $shift);
}
_triangleBasic() {
    content: "";
    width: 0;
    height: 0;
    min-width: 0;
    min-height: 0;
    position: absolute;
    border: 0 solid transparent;
}
_triangleShape($dir=top, $color=#fff, $h=10px, $w=null, $wOffs=50%, $wEdge=left, $shift='') {
    if (!$w) { $w = (2*$h); }
    if (($dir==left or $dir==right) and ($wEdge==left)) { $wEdge = top };
    if (!$shift) { $shift = ($w/2); }

    {$wEdge}: $wOffs;
    margin: -$shift;
    border-width: isVertical($dir) ? $h ($w/2) : ($w/2) $h;
    {$dir}: -$h;
    margin-{$dir}: 0;
    $dirInv = opposite-position($dir);
    border-{$dirInv}-color: $color;
    border-{$dir}-width: 0;
}




// ===============================================================================
// Misc

// screen-reader friendly off-screen hiding
_tuck() {
    position: absolute;
    right: 9999px;
    left: auto;
}

_afterClear() {
    &:after {
        content: " ";
        clear: both;
        display: block;
        height: 0;
    }
}


// generic image replacement
_hideText( $mode=normal ) {
    overflow: hidden;
    white-space: nowrap;
    if ($mode != soft) {
        letter-spacing: -0.4em;
        text-indent: 150%;
        text-align: left;
    }
    if ($mode == hard) {
        text-shadow: none !important;
        color: transparent !important;
    }
}



fade($color, $opacity)
    return rgba( $color, alpha($color)*$opacity );

percent( $value )
    return (100*$value)%;

pxem($px, $fs=12px)
    return ($px/$fs)em;

isVertical($dir)
    return $dir==top or $dir==bottom;
